extends layout

block content
    h2= title

    table.ui.celled.table.center.aligned
        thead
            tr
                th Type
                th Title
                th Description
                th Date
            tbody
                each item in catalog_list
                    tr
                        td= item.type
                        td= item.title
                        td= item.description
                        td= item.date
            tfoot
                tr
                    td(colspan='4') Total: #{catalog.length}
