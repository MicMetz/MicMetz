head
    title All That I Am
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css")
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.4.1/semantic.min.css' type='text/css')
    block styles
    style.
        html, body {
            height: 100%;

        }
        body {
            background-color: #fff5eb;
        }

        main#main {
            margin-left: 10em;
            margin-right: 10em;
            min-height: 50%;
            display: flex;
            flex-direction: column;
        }
        table.ui.celled img { display : inline-block; }
        footer {
            bottom: 0;
            margin-top : 5em;
            text-align : center;
            min-height: 10%;
            width: 100%;
            padding: 3em;
        }
        footer p {
            align-content: center;
        }
        p {
            font-size: 1.1em;
            line-height: 1.2em;
            letter-spacing: 0.01em;
            word-spacing: 0.1em;
        }
        h1.ui.center.aligned.header {
            font-size: 2.5em;
            line-height: 1.5em;
        }
        h2 {
            font-size: 2em;
            line-height: 1.5em;
        }
        h3 {
            font-size: 1.5em;
            line-height: 1.5em;
        }
        h4 {
            font-size: 1.2em;
            line-height: 1.5em;
        }

        option {
            font-size: 1.2em;
            line-height: 1.5em;
        }

        div.ui.three.item.menu a.item.active {
            background-color: #cbbfb6;
        }
        div.ui.three.item.menu a.item {
            background-color: white;
        }


